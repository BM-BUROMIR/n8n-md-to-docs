{
  "name": "markdown-to-gdocs-function",
  "version": "1.0.0",
  "description": "Firebase Function to convert Markdown to Google Docs",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./lib --target node --format cjs && cp lib-package.json lib/package.json",
    "build:server": "tsc --project tsconfig.json",
    "build:watch": "bun build ./src/index.ts --outdir ./lib --target node --format cjs --watch",
    "serve": "bun run build && firebase emulators:start",
    "shell": "bun run build && firebase functions:shell",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "bun --watch src/index.ts"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@hungknguyen/docx-math-converter": "^1.1.4",
    "cors": "^2.8.5",
    "docx": "^9.0.0",
    "express": "^4.18.2",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "googleapis": "^128.0.0",
    "marked": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/marked": "^5.0.2",
    "@types/node": "^18.0.0",
    "bun-types": "latest",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2"
  },
  "private": true
}